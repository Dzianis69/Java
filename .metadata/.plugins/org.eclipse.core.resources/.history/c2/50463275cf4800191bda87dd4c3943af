package com.class9;

import java.util.Scanner;

public class Task6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * Ask a user to input a leap year. Give the user 10 chances to enter a correct
		 * leap year. As soon as the user enters the correct leap year exit the loop.
		 */
		
		int year=0;
		int leapYear=2000;
		Scanner in=new Scanner(System.in);
		for(int i=9;i>=0;i--) { 
			                            System.out.println("Input leap year please:");
			year=in.nextInt();
			
			if(year==leapYear) {
				                        System.out.println("You won!!!");
				break;
			}else {
			                        	System.out.println("You lost!!! AHAHAHAHAHAHAHAAHA!!!");
			}
			if(year%4==0 && year!=2000) System.out.println("Wrong leap year");
			if(year!=leapYear)          System.out.println("You have "+i+" more chances");
			
		}
		
		}
	
	}


