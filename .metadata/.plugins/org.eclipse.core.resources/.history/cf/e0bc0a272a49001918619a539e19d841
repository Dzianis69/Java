package com.class10;

public class Diamond {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	for(int i=1;i<=4;i++) {
		System.out.println();
		for(int j=1;j<=5-i;j++)
		System.out.print(" ");
		for(int k=1;k<=i;k++) {
			System.out.print(i+" ");
		}
	}
		for(int a=3;a>1;a--) {
			System.out.println();
			for(int b=4;b>=1;b++) {
				System.out.print(" ");
			}
			for(int c=1;c<=a;c++) {
				System.out.print(a+" ");
			}
		}
	
	

			
	}
		
	}


